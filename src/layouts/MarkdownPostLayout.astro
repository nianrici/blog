---
import BaseLayout from './BaseLayout.astro';
import { fade } from 'astro:transitions';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
  <div class="container">
  <div class="frontmatter">
  <p transition:animate={fade({ duration: '2s' })} >Descripci√≥n: <em>{frontmatter.description}</em></p>
  <p>Publicado el {frontmatter.pubDate.toLocaleDateString().slice(0,10)}</p>  
  <p>Escrito por <a href="/about/">{frontmatter.author}</a></p>
</div>
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} class="post-image"/>
</div>
  <div class="tags"><span>Etiquetas: </span>
    {frontmatter.tags.map((tag) => (
      <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>
  <section class="markdown">
  <slot />
  </section>
</BaseLayout>